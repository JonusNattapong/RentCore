# Application
NODE_ENV=development
PORT=3000
APP_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=rentcore_dev
DATABASE_USER=rentcore_dev
DATABASE_PASSWORD=dev_password

# JWT Secret (CHANGE THIS IN PRODUCTION!)
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRES_IN=7d

# File Storage (AWS S3 or MinIO)
# For local development without S3, leave blank or use local storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-1
S3_BUCKET_NAME=
S3_ENDPOINT=

# Local upload folder (fallback when S3 not configured)
UPLOAD_PATH=./uploads

# pgAdmin (optional, for database management)
PGADMIN_DEFAULT_EMAIL=dev@rentcore.local
PGADMIN_DEFAULT_PASSWORD=dev_password

# Cron Jobs
ENABLE_INVOICE_GENERATION=true
INVOICE_GENERATION_CRON=0 1 * * *
OVERDUE_CHECK_CRON=0 9 * * *

# Email Notifications (optional)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@rentcore.local

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/app.log
